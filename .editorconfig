# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings
[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# 4 spaces for Go files
[*.go]
indent_style = tab

# 2 spaces for JSON, YAML, and TypeScript
[*.{json,yml,yaml,ts}]
indent_size = 2
